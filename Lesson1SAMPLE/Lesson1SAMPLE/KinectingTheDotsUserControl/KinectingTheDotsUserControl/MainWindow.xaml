<Window x:Class="KinectingTheDotsUserControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:Coding4Fun.Kinect.Wpf.Controls;assembly=Coding4Fun.Kinect.Wpf" Title="weImagine: Dodgeball" Width="1280" Height="1024" Icon="/Kinect_Keyboard;component/Resources/hand-palm-th.png">
    <Grid x:Name="theGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0*" />
        </Grid.ColumnDefinitions>

        <Canvas Background="Black" Width="1276" Height="993" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,-4,0">

            <!--
            <Image  Name="videoImage" VerticalAlignment="Center" HorizontalAlignment="Center" Width="1280" Height="1024"/>
            -->
            
            <!-- buttons -->
            
            <Grid Height="405" Canvas.Left="327" Canvas.Top="312" Width="656">
                <Controls:HoverButton x:Name="MainMenuItem1" ImageSize="100" TimeInterval="1000" Margin="0,0,0,320" />
                <Controls:HoverButton x:Name="MainMenuItem2" ImageSize="100" TimeInterval="1000" Margin="0,104,0,212" />
                <Controls:HoverButton x:Name="MainMenuItem3" ImageSize="100" TimeInterval="1000" Margin="0,212,0,104" />
                <Controls:HoverButton x:Name="MainMenuItem4" ImageSize="100" TimeInterval="1000" Margin="0,320,0,0" />
            </Grid>

            <Grid Height="405" Canvas.Left="327" Canvas.Top="312" Width="656">
                <Rectangle x:Name="MainMenuItemImage1" Fill="LightSkyBlue" Stroke="Black" StrokeThickness="3" RadiusX="10" RadiusY="10" Margin="0,0,0,320" />
                <Rectangle x:Name="MainMenuItemImage2" Fill="LightSkyBlue" Stroke="Black" StrokeThickness="3" RadiusX="10" RadiusY="10" Margin="0,104,0,212" />
                <Rectangle x:Name="MainMenuItemImage3" Fill="LightSkyBlue" Stroke="Black" StrokeThickness="3" RadiusX="10" RadiusY="10" Margin="0,212,0,104" />
                <Rectangle x:Name="MainMenuItemImage4" Fill="LightSkyBlue" Stroke="Black" StrokeThickness="3" RadiusX="10" RadiusY="10" Margin="0,320,0,0" />
            </Grid>

            <!-- tracked drawbles -->


            <Ellipse Height="81" Width="70" Name="RightHand" Canvas.Left="-222" Canvas.Top="373">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Resources/hand-palm-th.png" />
                </Ellipse.Fill>
            </Ellipse>



        </Canvas>
    </Grid>
</Window>
