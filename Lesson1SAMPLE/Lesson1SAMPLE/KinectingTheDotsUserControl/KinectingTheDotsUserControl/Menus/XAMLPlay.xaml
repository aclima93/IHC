                <Rectangle Height="10" Fill="LightSkyBlue" Margin="0,767,0,0"/>
                <Rectangle Width="10" Fill="LightSkyBlue" Margin="0,0,1365,0"/>
                <Rectangle Width="10" Fill="LightSkyBlue" Margin="1365,0,0,0"/>
