            </Grid>

            <Rectangle Height="1" Fill="LightSkyBlue" Margin="285,320,285,446"/>
            <Rectangle Height="1" Fill="LightSkyBlue" Margin="285,446,285,320"/>
            <Rectangle Width="1" Fill="LightSkyBlue" Margin="285,320,397,322"/>
